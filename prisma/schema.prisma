generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Form {
  id                  Int                   @id @default(autoincrement())
  fullName            String
  email               String                @unique
  age                 Int                   @default(0)
  phoneNumber         Int                   @unique
  imageUrl            String
  photoTitle          String?               @default("nill")
  comment             String?               @default("nill")
  photoLocation       String
  photoPurpose        String?               @default("nill")
  AttachmetnsMetaData AttachmetnsMetaData[]
}

model AttachmetnsMetaData {
  id            Int      @id @default(autoincrement())
  fileId        Int      @unique
  Form          Form     @relation(fields: [requestEmail], references: [email])
  requestEmail  String
  fileType      String
  size          Int
  creation_date DateTime
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}
